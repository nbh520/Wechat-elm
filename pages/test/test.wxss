.video {
  margin: 50px auto;
  width: 100%;
  height: 300px;
}
.cam{
  position: fixed;
  width: 100px;
  height: 100px;
  left: calc(50% - 50px);
  bottom: 20px;
  z-index: 1000;
}
.cam button{
  width: 80px;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #000;
  opacity: .5;
}